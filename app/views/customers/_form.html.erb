<div class="container">
  <div class="col-md-5 col-md-offset-3">
    <div class="well">
    <div class="form-area"> 
      <%= form_for @customer do |f| %>
        <br style="clear:both">
        <h3 style="margin-bottom: 25px; text-align: center;">Customer Form</h3>
        <% if @customer.errors.any? %>
          <div id="error_explanation">
            <h2><%= pluralize(@customer.errors.count, "error") %> prohibited this customer from being saved:</h2>

            <ul>
            <% @customer.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
            </ul>
          </div>
        <% end %>
        <div class="form-group">
          <%= f.text_field :name, class: 'form-control', placeholder: 'Name' %>
        </div>
        <div class="form-group">
          <%= f.text_field :address, class: 'form-control', placeholder: 'Address', id: 'geo-input' %>
        </div>
        <%= f.hidden_field :lat %>
        <%= f.hidden_field :lng %>
        <div class="form-group">
          <%= f.text_field :city, class: 'form-control', placeholder: 'City', id: 'locality' %>
        </div>
        <div class="form-group">
          <%= f.text_field :state, class: 'form-control', placeholder: 'State', id: 'administrative_area_level_1' %>
        </div>
        <div class="form-group">
          <%= f.text_field :zip, class: 'form-control', placeholder: 'Zip', id: 'postal_code'  %>
        </div>
        <div class="form-group">
          <%= f.text_field :email, class: 'form-control', placeholder: 'Email' %>
        </div>
        <div class="form-group">
          <%= f.text_field :phone, class: 'form-control', placeholder: 'Phone' %>
        </div>
        
        <div>
          <div id="addresses">
            <%= f.fields_for :vehicles do |vehicle| %>
              <%= render 'vehicle_fields', f: vehicle %>
            <% end %>
            <div class="links">
              <%= link_to_add_fields 'add vehicles', f, :vehicles %>
              <%= f.submit class: 'btn btn-primary pull-right' %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>

